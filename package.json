{
  "name": "controltower",
  "version": "0.5.1",
  "main": "./src/index.js",
  "license": "AGPL-3.0",
  "scripts-info": {
    "build:npm": "Builds the transpiled npm package under dist/npm",
    "ppp": "Increases the version patch number, push to github and publish to npm",
    "mpp": "Increases the version minor number, push to github and publish to npm"
  },
  "scripts": {
    "info": "npm-scripts-info",
    "start": "budo ./src/index.js --dir ./src",
    "build:www:js:vendors": "node tasks/vendorLibs.js",
    "build:www:js:app": "rollup src/index.js -c rollup.config.app.js -o dist/www/app.js",
    "build:www": "npm run build:www:js:vendors && npm run build:www:js:app",
    "build:npm": "babel --ignore node_modules,dist,tasks --out-dir ./dist/npm .",
    "publish:npm": "npm run build:npm && npm publish dist/npm",
    "ppp": "npm version patch && git push && git push --tags && npm run publish:npm",
    "mpp": "npm version minor && git push && git push --tags && npm run publish:npm",
    "postbuild:npm": "babel-node ./tasks/npmPostBuild.js",
    "prebuild:www": "babel-node tasks/wwwPreBuild.js"
  },
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-object-rest-spread"
    ]
  },
  "eslintConfig": {
    "extends": "calamar"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-external-helpers": "^6.8.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.11.5",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babelify": "^7.3.0",
    "budo": "^9.0.0",
    "eslint": "^3.3.1",
    "eslint-config-calamar": "^2.1.1",
    "eslint-plugin-import": "^1.13.0",
    "npm-scripts-info": "^0.3.6",
    "rollup": "^0.34.10",
    "rollup-plugin-babel": "^2.6.1",
    "rollup-plugin-commonjs": "^3.3.1",
    "rollup-plugin-json": "^2.0.1",
    "shelljs": "^0.7.3"
  },
  "description": "a customer control center web app",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fczuardi/controltower.git"
  },
  "keywords": [
    "web admin",
    "dashboard",
    "control panel",
    "control center"
  ],
  "author": "Fabricio C Zuardi",
  "bugs": {
    "url": "https://github.com/fczuardi/controltower/issues"
  },
  "homepage": "https://github.com/fczuardi/controltower#readme",
  "dependencies": {
    "choo": "^3.2.0"
  }
}
